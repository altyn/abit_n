extends ../layout
block content
    .row
        .col.s12.m4.l3

            .col.s12.m12.l12.no-print
                // Modal Trigger
                a.waves-effect.waves-light.btn.modal-trigger(href='#modal1') Добавить


            .row.no-print.sort_dep_button
                .row
                    form.col.s10.center-align(action='/comission/sort', method='post')
                        .input-field.col.s12
                            select(name='tour')
                                option(name="1", value="1") 1
                                option(name="2", value="2") 2
                                option(name="3", value="3") 3
                                option(name="4", value="4") 4
                            label Тур
                        .input-field.col.s12
                            select(name='department')
                                each c, i in data.departments
                                    option(name="#{c.name}", value=c._id) #{c.name}
                            label Выберите направление

                        .input-field.col.s12
                            select(name='formaobuch')
                                each c, i in data.formaobuch
                                    option(name="#{c.desc}", value=c._id) #{c.desc}
                            label Выберите форму обучения
                        .row
                            input.btn.btn-success(type='submit', value='Поиск')


            #modal1.modal
                .modal-content
                    h4 Добавить новые данные
                    .row
                    form(action='/comission', method='post')
                        .row.margin
                            .input-field.col.s6
                                i.mdi-communication-vpn-key.prefix
                                input(type='text', name='regnumber')
                                label(for='regnumber') Регистрационный номер
                            .input-field.col.s6
                                i.mdi-action-info-outline.prefix
                                input(type='text', name='point')
                                label Сумма баллов
                        .row.margin
                            .input-field.col.s12
                                i.mdi-action-info-outline.prefix
                                input(type='text', name='lastname')
                                label(for='lastname') Фамилия
                            .input-field.col.s12
                                i.mdi-action-info-outline.prefix
                                input(type='text', name='name')
                                label(for='name') Имя
                            .input-field.col.s12
                                i.mdi-action-info-outline.prefix
                                input(type='text', name='middlename')
                                label Отчество

                            .input-field.col.s12
                                select(name='department')
                                    each c, i in data.departments
                                        option(name="#{c.name}") #{c.name}
                                label Выберите направление

                            .input-field.col.s12
                                select(name='formaobuch')
                                    each c, i in data.formaobuch
                                        option(name="#{c.desc}") #{c.desc}
                                label Выберите форму обучения

                            .input-field.col.s12
                                select(name='tour')
                                    option(name="1", value="1") 1
                                    option(name="2", value="2") 2
                                    option(name="3", value="3") 3
                                    option(name="4", value="4") 4
                                label Выберите тур

                        .modal-footer
                            input.btn.btn-success(type='submit', value='Сохранить')
                            a.modal-action.modal-close.waves-effect.waves-red.btn-flat(href='#!') Отмена

        .col.s12.m8.l9


            table.responsive-table.striped
                thead
                    tr
                        th(data-field='id') №
                        th(data-field='regnumber') Рег. номер
                        th(data-field='fio') ФИО
                        th(data-filed='depart') Напраление
                        th(data-filed='formobuch') Форма обучения
                        th(data-field='point') Баллы
                        th(data-field='created') Дата создания
                tbody
                    each c, i in data.comission
                        tr
                            td #{i+1}
                            td #{c.regnumber}
                            td #{c.lastname} #{c.name} #{c.middlename}
                            td #{c.department}
                            td #{c.formaobuch}
                            td #{c.point}
                            td #{moment(c.created).format('DD-MM-YYYY HH:mm', 'RU')}
