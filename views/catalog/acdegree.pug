extends ../layout.pug
block content
    .section
        if message
            p #{message}
        #responsive-table
            h4.header Академическая степень
            .row
                .col.s12.m4.l3
                    // Modal Trigger
                    a.waves-effect.waves-light.btn.modal-trigger(href='#modal1') Добавить
                    #modal1.modal
                        .modal-content
                            h4 Добавить новые данные
                            .row
                            form(action='/acdegree', method='post')
                                .row.margin
                                    .input-field.col.s6
                                        i.mdi-communication-vpn-key.prefix
                                        input(type='text', name='_id')
                                        label(for='_id') Id
                                    .input-field.col.s6
                                        i.mdi-action-info-outline.prefix
                                        input(type='text', name='short')
                                        label(for='short') Коротко
                                .row.margin
                                    .input-field.col.s12
                                        i.mdi-action-info-outline.prefix
                                        input(type='text', name='desc')
                                        label(for='desc') Описание
                                .modal-footer
                                    input.btn.btn-success(type='submit', value='Сохранить')
                                    a.modal-action.modal-close.waves-effect.waves-red.btn-flat(href='#!') Отмена
                .col.s12.m8.l9
                    table.responsive-table
                        thead
                            tr
                                th(data-field='id') ID
                                th(data-field='name') Описание
                                th(data-field='short') Коротко
                        tbody
                            each c, i in catalog
                                tr
                                    td #{c._id}
                                    td #{c.desc}
                                    td #{c.short}